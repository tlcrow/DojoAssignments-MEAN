<!doctype html>

 <html lang="en"> 
    <head>
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
            <meta charset="utf-8">
            <title>Login and Registration</title>
    </head>

    <body>
        <div class="container">
            <br>
            <h1>Register</h1>
            <%if(typeof(regErrs) != "undefined"){%>
                <%for(err in regErrs){%>
                    <div class="alert alert-danger alert-dismissable fade in">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <%if(typeof(regErrs[err].message) != "undefined"){%>
                            <%=regErrs[err].message%>
                        <%}else{%>
                            <%=regErrs[err]%>
                        <%}%>
                    </div>                
                <%}%>
            <%}%>
            <form action='/registration' method='post'>
                <p><strong>First Name: </strong><input type='text' name='first_name' value=''></p>
                <p><strong>Last Name: </strong><input type='text' name='last_name' value=''></p>
                <p><strong>Email: </strong><input type='text' name='email' value=''></p>
                <p><strong>Password: </strong><input type='text' name='password' value=''></p>
                <p><strong>Password Confirmation: </strong><input type='text' name='password_confirmation' value=''></p>
                <p><strong>Birthday: </strong><input type='date' name='birthday' value=''></p>
                <input type='submit' value='Register' class="btn-sm">
            </form>
            <br>
        <h1>Login</h1>
        <%if(typeof(logErrs) != "undefined"){%>
            <%for(err in logErrs){%>
                <div class="alert alert-danger alert-dismissable fade in">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <%=logErrs[err]%>
                </div>                
            <%}%>
        <%}%>
        <form action='/login' method='post'>
            <p><strong>Email: </strong><input type='text' name='email' value=''>
            <strong>Password: </strong><input type='text' name='password' value=''></p>
            <input type='submit' value='Login' class="btn-sm">
        </form>
        </div>
    </body>
</html>